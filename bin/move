#!/usr/bin/env ruby

require_relative '../lib/move.rb'

puts "Welcome to Tic Tac Toe!"
board = [" ", " ", " ", " ", " ", " ", " ", " ", " "]
display_board(board)
puts "where would you like to go?
input = gets.strip
converted_input = inputs_to_index(input)
move(board, converted_input)
update_array_at_with(board, 0)
display_board